//**********MATRIX ADDITION**************
#include<stdio.h>

void main()
{
    int a[3][3],b[3][3],c[3][3],i,j;

    printf("Enter the elements of 2D array -Matrix A  ");
    for ( i = 0; i <=2; i++)
    for ( j = 0; j<=2; j++)
    scanf("%d",&a[i][j]);

printf("Enter the elements of 2D array -Matrix B  ");
    for ( i = 0; i <=2; i++)
    for ( j = 0; j<=2; j++)
    scanf("%d",&b[i][j]);


    for ( i = 0; i <=2; i++)
   { 
       for ( j = 0; j<=2; j++)
    c[i][j]=a[i][j] + b[i][j];
    }

    printf("The elements of resultant  array - Matrix C \n ");
    for ( i = 0; i <=2; i++)
    {
        for ( j = 0; j<=2; j++)
    printf(" %d ",c[i][j]);
    printf("\n");
    }
}
