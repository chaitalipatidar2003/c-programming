// Area of circle***********************

#include<stdio.h>

void main(){
    int radius;
    printf("Enter radius %f \n");
    scanf("%d",&radius);
    printf("The area of a circle is  : %f \n",3.14*radius*radius);

}// #include<stdio.h>

