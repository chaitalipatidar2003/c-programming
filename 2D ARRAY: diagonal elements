//*************2D ARRAY: diagonal elements ****************************

#include <stdio.h>

void main()
{
    int a[3][3]={{7,2,4},{5,9,1},{3,6,8}};
    int i, j;

    

    printf("Elements of 2D array - \n");
    for (i = 0; i <= 2; i++)
   {
        {
        for (j = 0; j <= 2; j++)
        if (i==j)
        
            printf(" %d ", a[i][j]);
            else
            printf(" ");
    }
    printf("\n"); 
    }
}
