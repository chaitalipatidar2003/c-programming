//ARRAYS: max & min value*******************

#include<stdio.h>

void main()
{
    int a[5],i,max,min;
    printf("Enter elements of array");
    for ( i = 0; i <= 4; i++)
    scanf("%d",&a[i]);


    max=a[0];
    min=a[0];
    for ( i = 0; i <=4; i++)
    {
        if (a[i]>max )
           max=a[i]; 

        if(a[i]<min)
        min=a[i];    
    }
    printf("Biggest value is %d ",max);
    printf("smallest value is %d ",min);
}*******************

#include<stdio.h>

void main()
{
    int a[5],i,max,min;
    printf("Enter elements of array");
    for ( i = 0; i <= 4; i++)
    scanf("%d",&a[i]);


    max=a[0];
    min=a[0];
    for ( i = 0; i <=4; i++)
    {
        if (a[i]>max )
           max=a[i]; 

        if(a[i]<min)
        min=a[i];    
    }
    printf("Biggest value is %d ",max);
    printf("smallest value is %d ",min);
}
