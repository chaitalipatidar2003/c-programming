//********************************************switch case**********************************************
#include <stdio.h>
#include<string.h>
void main()
{
    int i, a[3], n;

    printf("Enter the number");
    scanf("%d", &n);

    i = 0;
    while (n > 0)
    {
        a[i] = n % 10;
        n = n / 10;

        printf("%d", a[i]);


   printf("The number is \n");
    for (i = 2; i >= 0; i--)
    
   {do
    {
        switch (a[i])
    {
    case 0:
        printf("ZERO ");
        break;

    case 1:
        printf("ONE ");
        break;

    case 2:
        printf("TWO ");
        break;

    case 3:
        printf("THREE ");
        break;

    case 4:
        printf("FOUR ");
        break;

    case 5:
        printf("FIVE ");
        break;

    case 6:
        printf("SIX ");
        break;

    case 7:
        printf("SEVEN ");
        break;

    case 8:
        printf("EIGHT ");
        break;

    case 9:
        printf("NINE ");
        break;
    }
}while(i==3);
    }
}
