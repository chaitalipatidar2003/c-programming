//Recursion :factorial****************

#include<stdio.h>
int factorial(int n);

void main()
{
    int n,f;

    printf("Enter n");
    scanf("%d",&n);

    f=factorial(n);

    printf("factorial=%d",f);

}

int factorial(int n)
{
    int fact;

    if (n==1)

    {
        fact=1;
    }
    else
    {
        fact=n*factorial(n-1);
    }
    return(fact);
}
