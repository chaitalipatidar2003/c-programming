#include<stdio.h>

#define pi 3.14159265
#define square(r) r*r
#define area(r) pi*square(r)

void main()
{   
    float r,a;

    printf("Enter the radius");
    scanf("%f",&r);

    a=area(r);
    printf("area of a circle is %f",a);

}
