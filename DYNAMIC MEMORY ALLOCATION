//**********************************DYNAMIC MEMORY ALLOCATION*****************************************
#include<stdio.h>
#include<malloc.h>

void main()
{
    int *p;
    printf("hello..........\n");
    printf("Welcome !!!!!!!!!!!!\n");

    p=(int*)malloc(sizeof(int));
    *p=100;
    printf("Value of dynamic variables is %d \n",*p);
    free(p);

    p=(int*)malloc(sizeof(int));
    *p=45;
    printf("Value of dynamic variables is %d \n",*p);
    free(p);

    printf("Bye\n");
    printf("Program ended\n");

}
