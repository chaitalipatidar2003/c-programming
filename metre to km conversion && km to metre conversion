//KILOMETRES TO METRES CONVERSION***********************

#include<stdio.h>

void main()
{
    float km;
    int mt;

    printf("Enter the distance in km ");
    scanf("%f",&km);

    mt=km*1000;

    printf("KM=%d ",mt);

}
