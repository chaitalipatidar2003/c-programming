//******** array to function:diagonal elements************
#include <stdio.h>
void diag(int a[i][j]);

void main()
{
    int a[3][3] = {{7, 2, 4}, {5, 9, 1}, {3, 6, 8}};
    int i, j;

    diag(a);
}

void diag(int a[i][j])
{
    int i, j;
    printf("Print diagonal elements ");
    for (i = 0; i <= 2; i++)
    {
        for (j = 0; j <= 2; j++)
            if (i == j)
            {
                printf(" %d ", a[i][j]);
            }
            else
            {
                printf(" ");
            }
         printf("\n");   
    }
}
